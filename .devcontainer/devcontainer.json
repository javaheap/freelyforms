// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"name": "Java & JavaScript & Mongo DB",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"installMaven": true,
			"version": "17",
			"jdkDistro": "ms",
			"gradleVersion": "latest",
			"mavenVersion": "latest",
			"antVersion": "latest"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "18",
			"nvmVersion": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/npm-package:1": {
			"package": "typescript",
			"version": "latest"
		},
		"ghcr.io/jayree/devcontainer-features/npm-registry:1": {
			"registry": "@SCOPE:registry=https://npm.pkg.github.com\n//npm.pkg.github.com/:_authToken=${localEnv:GITHUB_TOKEN}"
		},
		"ghcr.io/devcontainers-contrib/features/tmux-apt-get:1": {},
		"ghcr.io/devcontainers-contrib/features/maven-sdkman:2": {
			"version": "latest",
			"jdkVersion": "17",
			"jdkDistro": "ms"
		},
		"ghcr.io/devcontainers-contrib/features/node-asdf:0": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/springboot-sdkman:2": {
			"version": "latest",
			"jdkVersion": "17",
			"jdkDistro": "ms"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"mongodb.mongodb-vscode",
				"vscjava.vscode-java-debug",
				"redhat.java",
				"vscjava.vscode-java-pack",
				"vscjava.vscode-maven",
				"vscjava.vscode-java-dependency",
				"vscjava.vscode-java-test",
				"dbaeumer.vscode-eslint",
				"shengchen.vscode-checkstyle",
				"tintinweb.vscode-decompiler",
				"alphabotsec.vscode-eclipse-keybindings",
				"mhutchie.git-graph",
				"GitHub.codespaces",
				"vscjava.vscode-lombok",
				"DavidAnson.vscode-markdownlint",
				"christian-kohler.npm-intellisense",
				"SonarSource.sonarlint-vscode",
				"vscjava.vscode-spring-boot-dashboard",
				"vmware.vscode-boot-dev-pack",
				"vscjava.vscode-spring-initializr",
				"redhat.vscode-xml",
				"redhat.vscode-yaml"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
