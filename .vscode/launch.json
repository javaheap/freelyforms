{
    "configurations": [
        {
            "type": "java",
            "name": "Backend",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "fr.utbm.da50.freelyforms.core.FreelyFormsApplication",
            "projectName": "freelyforms",
            "args": "--spring.profiles.active=dev",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/src/main/js",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "dev"
            ]
        }
    ]
}